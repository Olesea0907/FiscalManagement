@page
@model FiscalManagement.Pages.Cereri.IndexModel

@{
    ViewData["Title"] = "Listă de Cereri";
}

<h2 class="text-center text-primary">@ViewData["Title"]</h2>

<p class="text-center">
    <a asp-page="Create" class="btn btn-primary btn-custom">Adaugă o cerere</a>
</p>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var cerere in Model.Cereri)
    {
        <div class="col">
            <div class="card card-custom">
                <div class="card-body">
                    <h5 class="card-title text-primary">@cerere.TipCerere</h5>
                    <p class="card-text"><strong>Data depunerii:</strong> @cerere.DataDepunerii.ToString("dd.MM.yyyy")</p>
                    <p class="card-text"><strong>Status:</strong> @cerere.Status</p>
                    <p class="card-text">
                        <strong>Contribuabil:</strong> @cerere.Contribuabil.Nume @cerere.Contribuabil.Prenume
                        <br />
                        <strong>CNP:</strong> @cerere.Contribuabil.CNP
                    </p>
                    <div class="d-flex justify-content-between">
                        <a asp-page="Details" asp-route-id="@cerere.CerereID" class="btn btn-sm btn-info btn-custom">Detalii</a>
                        <a asp-page="Edit" asp-route-id="@cerere.CerereID" class="btn btn-sm btn-warning btn-custom">Editare</a>
                        <a asp-page="Delete" asp-route-id="@cerere.CerereID" class="btn btn-sm btn-danger btn-custom">Șterge</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Cereri.Any())
{
    <p class="text-center text-muted">Nu există cereri înregistrate.</p>
}
