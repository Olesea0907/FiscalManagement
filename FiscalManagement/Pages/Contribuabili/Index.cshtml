@page
@model FiscalManagement.Pages.Contribuabili.IndexModel

@{
    ViewData["Title"] = "Listă de Contribuabili";
}

<h2 class="text-center text-primary">@ViewData["Title"]</h2>

<p class="text-center">
    <a asp-page="Create" class="btn btn-primary btn-custom">Adaugă un Contribuabil</a>
</p>

@if (Model.Contribuabili != null && Model.Contribuabili.Any())
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var contribuabil in Model.Contribuabili)
        {
            <div class="col">
                <div class="card card-custom">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@contribuabil.Nume @contribuabil.Prenume</h5>
                        <p class="card-text"><strong>CNP:</strong> @contribuabil.CNP</p>
                        <p class="card-text"><strong>Adresă:</strong> @contribuabil.Adresa</p>
                        <p class="card-text"><strong>Telefon:</strong> @contribuabil.Telefon</p>
                        <div class="d-flex justify-content-between">
                            <a asp-page="Details" asp-route-id="@contribuabil.ContribuabilID" class="btn btn-sm btn-info btn-custom">Detalii</a>
                            <a asp-page="Edit" asp-route-id="@contribuabil.ContribuabilID" class="btn btn-sm btn-warning btn-custom">Editare</a>
                            <form method="post" asp-page="Delete" asp-route-id="@contribuabil.ContribuabilID" onsubmit="return confirm('Ești sigur că vrei să ștergi acest contribuabil?');" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger btn-custom">Șterge</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center text-muted">Nu există contribuabili înregistrați.</p>
}
