@page "{id:int}"
@model FiscalManagement.Pages.Contribuabili.EditModel

<h1>Editare Contribuabil</h1>

<form method="post">
    <input type="hidden" asp-for="Contribuabil.ContribuabilID" />

    <div class="form-group">
        <label asp-for="Contribuabil.Nume" class="control-label"></label>
        <input asp-for="Contribuabil.Nume" class="form-control" />
        <span asp-validation-for="Contribuabil.Nume" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Contribuabil.Prenume" class="control-label"></label>
        <input asp-for="Contribuabil.Prenume" class="form-control" />
        <span asp-validation-for="Contribuabil.Prenume" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Contribuabil.CNP" class="control-label"></label>
        <input asp-for="Contribuabil.CNP" class="form-control" />
        <span asp-validation-for="Contribuabil.CNP" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Contribuabil.Adresa" class="control-label"></label>
        <input asp-for="Contribuabil.Adresa" class="form-control" />
        <span asp-validation-for="Contribuabil.Adresa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Contribuabil.Telefon" class="control-label"></label>
        <input asp-for="Contribuabil.Telefon" class="form-control" />
        <span asp-validation-for="Contribuabil.Telefon" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
