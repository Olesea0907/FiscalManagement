@page "{id:int}"
@model FiscalManagement.Pages.Audite.DetailsModel
@{
    ViewData["Title"] = "Detalii Audit";
}

<h1>Detalii Audit</h1>

<div>
    <h4>Audit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Audit.AuditID
        </dd>
        <dt class="col-sm-2">
            Descriere
        </dt>
        <dd class="col-sm-10">
            @Model.Audit.Descriere
        </dd>
        <dt class="col-sm-2">
            Data Audit
        </dt>
        <dd class="col-sm-10">
            @Model.Audit.DataAudit.ToString("dd/MM/yyyy")
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Audit.AuditID" class="btn btn-warning">Editare</a>
    <a asp-page="./Index" class="btn btn-secondary">Înapoi la listă</a>
</div>
